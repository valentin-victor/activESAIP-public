@import "/CSS/globalStyle.css";

/* Style général */
body {
  font-family: Arial, sans-serif;
  /*background-color: #f5f5f5;*/
}

h1 {
  text-align: center;
}

/* Style du formulaire */
.formulaire_tout {
  margin: 0 auto;
  max-width: 600px;
  background-color: #fff;
  padding: 20px;
  border-radius: 5px;
  box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.3);
}

.formulaire_tout input,
.formulaire_tout select {
  display: block;
  width: 100%;
  padding: 10px;
  border: 1px solid #ccc;
  border-radius: 5px;
  margin-bottom: 10px;
  font-size: 16px;
}

.formulaire_nom {
  text-transform: capitalize;
}

.formulaire_Email {
  text-transform: lowercase;
}

.formulaire_telephone {
  text-align: left;
}

.formulaire_tout select {
  margin-top: 10px;
}

.formulaire_tout button[type="submit"] {
  display: block;
  width: 100%;
  padding: 10px;
  margin-top: 20px;
  background-color: #4CAF50;
  color: #fff;
  border: none;
  border-radius: 5px;
  font-size: 18px;
  cursor: pointer;
}

.formulaire_tout button[type="submit"]:hover {
  background-color: #3e8e41;
}

/* Style du bouton d'envoi d'email */
button {
  display: block;
  margin: 20px auto;
  padding: 10px;
  background-color: #2196F3;
  color: #fff;
  border: none;
  border-radius: 5px;
  font-size: 18px;
  cursor: pointer;
}

button:hover {
  background-color: #0b7dda;
}